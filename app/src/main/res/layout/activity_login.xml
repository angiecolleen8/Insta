<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.anitac.labcloningloginscreen.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="50dp"
        android:layout_marginTop="103dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/instagram" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/opacity"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/Username"
        android:layout_alignStart="@+id/Username"
        android:layout_below="@+id/Username"
        android:layout_marginTop="14dp"
        android:background="@drawable/opacity"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Password"
        android:layout_alignStart="@+id/Password"
        android:layout_below="@+id/Password"
        android:layout_marginTop="21dp"
        android:background="@drawable/my_button_bg"
        android:text="Log In"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:text="Forgot your login details?"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/get_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forgot"
        android:layout_alignBottom="@+id/forgot"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/forgot"
        android:clickable="true"
        android:text="Get help signing in."
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account"
        android:layout_alignBottom="@+id/account"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/account"
        android:text="Sign up."
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="OR"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/withFacebook"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/or"
        android:layout_toStartOf="@+id/withFacebook"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/facebook" />

    <TextView
        android:id="@+id/withFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup"
        android:layout_below="@+id/or"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="14dp"
        android:text="Log in with Facebook"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
